# Environment variables for RH Systems
# Service URLs and ports
EMPLOYEE_SERVICE_URL=http://localhost:8081
PAYROLL_SERVICE_URL=http://localhost:8082
PERFORMANCE_SERVICE_URL=http://localhost:8083
SCHEDULE_SERVICE_URL=http://localhost:8084

# Database configurations
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rh_systems
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Employee service configuration
EMPLOYEE_SERVICE_PORT=8081
EMPLOYEE_SERVICE_DB_NAME=employee_service

# Payroll service configuration
PAYROLL_SERVICE_PORT=8082
PAYROLL_SERVICE_DB_NAME=payroll_service

# Performance service configuration
PERFORMANCE_SERVICE_PORT=8083
PERFORMANCE_SERVICE_DB_NAME=performance_service

# Schedule service configuration
SCHEDULE_SERVICE_PORT=8084
SCHEDULE_SERVICE_DB_NAME=schedule_service

# JWT Secret for authentication
JWT_SECRET=rh_systems_jwt_secret
JWT_EXPIRATION_MS=86400000